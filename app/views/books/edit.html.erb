<h1>Editing Book</h1>
<!-- error -->
  <% if @book.errors.any? %>
   <div id="error_explanation">
     <h2><%= @book.errors.count %>ã€€errors prohibited this book from being saved</h2>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
     </ul>
   </div>
