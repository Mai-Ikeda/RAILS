<%= form_with model: @book do |f| %>


 <div class="field">
   <%= f.label :title, class:"title" %>
   <%= f.text_field :title, class:"title" %>
 </div>

 <div class="field">
   <%= f.label :body,class:"body" %>
   <%= f.text_area :body, class:"body" %>
 </div>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book.id) %>
